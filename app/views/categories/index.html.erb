<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Subcategory</th>
      <th>Private</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.category ? category.category.name : '-' %></td>
        <td>
          <% category.subcategories.each do |c| %>
            <%= c.name %><br>
          <% end %>
        </td>
        <td><%= category.private %></td>
        <% category.private ? 'Private' : 'Public' %>

        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: "btn btn-outline-info" %>
